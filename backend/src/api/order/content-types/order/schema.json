{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "processing", "shipped", "delivered", "cancelled"],
      "default": "pending",
      "required": true
    },
    "items": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "tax": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "shipping": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "shippingAddress": {
      "type": "json",
      "required": true
    },
    "stripeSessionId": {
      "type": "string",
      "unique": true
    },
    "stripePaymentIntentId": {
      "type": "string",
      "unique": false
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "userId": {
      "type": "integer"
    },
    "notes": {
      "type": "text"
    }
  }
}
